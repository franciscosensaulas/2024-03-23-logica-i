algoritmo "Exemplo Para 01"
var
indice: inteiro
inicio

// Apresentar a mensagem 5 vezes
enquanto indice < 5 faca
   escreval("Opa")
   indice := indice + 1  //incrementar
fimenquanto

escreval
// Apresentar a mensagem 5 vezes
// o comando para tem como objetivo ir de um determinado indice até outro
para indice de 0 ate 4 faca
   escreval("Opa")
fimpara

fimalgoritmo
