algoritmo "semnome"
var
numero: inteiro
numeroAnterior: inteiro
numeroProximo: inteiro

inicio

escreva("Digite um número: ")
leia(numero)

numeroAnterior := numero - 1
numeroProximo := numero + 1

escreval("Número anterior: ", numeroAnterior)
escreval("Próximo número: ", numeroProximo)
fimalgoritmo
